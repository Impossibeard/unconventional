<p>
  <%= link_to @post.description, @post.description, class: 'embedly-card' %>
</p>

<%= cl_image_tag(@post.picture_url(:large), width: 200, height: 200, :default_image => @post.picture.url) %>

<%= link_to "Edit", edit_project_post_path(@post.project, @post), class: 'btn btn-success' %>

<%= link_to "Delete Post", [@post.project, @post], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
