<div class="row" id="pin_show">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading pin_image">
        <p>
          <%= link_to @post.embedlink, @post.embedlink, class: 'embedly-card' %>
        </p>
        <%= cl_image_tag(@post.picture_url, width: 200, height: 200, :default_image => @post.picture.url) %>
        <div class="panel-body">
          <h1>
            <%= @post.title %>
          </h1>
          <p class="description">
            <%= @post.description %>
          </p>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-6">
              <p class="user"></p>
              Submitted by
              <%= @post.user.email %>
            </div>
            <div class="col-md-6">
              <div class="btn-group pull-right">
                <% if user_signed_in? %>
                  <%= link_to "Edit", edit_project_post_path, class: "btn btn-default" %>
                  <%= link_to "Delete", project_post_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
